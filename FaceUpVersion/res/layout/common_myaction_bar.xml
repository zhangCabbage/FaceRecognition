<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/base_bg">
    <RelativeLayout 
        android:id="@+id/common_actionBar"
        android:layout_height="50dp"
        android:layout_width="match_parent">
        <Button 
            android:id="@+id/title_button_left"
            android:layout_height="35dp"
            android:layout_width="60dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textColor="@color/blue"
            android:textSize="16sp"
            android:background="@color/base_bg"/>
        <TextView 
            android:id="@+id/title_txt"
            android:layout_height="40dp"
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textColor="@color/blue"
            android:textSize="18sp"/>
        <Button 
            android:id="@+id/title_button_right"
            android:layout_height="30dp"
            android:layout_width="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="right"
            android:textColor="@color/blue"
        	android:textSize="16sp"
            android:layout_marginRight="10dp"
            android:background="@color/base_bg"/>
        
        <LinearLayout
            android:id="@+id/common_actionBar_layout"
            android:layout_height="wrap_content"
            android:layout_width="150dp"
            android:orientation="horizontal"
            android:layout_centerInParent="true"
            android:background="@drawable/actionbar_top_bg">
            <Button 
                android:id="@+id/actionBar_left"
                style="@style/top_work"
                android:text="work"/>
            <Button 
                android:id="@+id/actionBar_right"
                style="@style/top_fun"
                android:text="fun"/>
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>