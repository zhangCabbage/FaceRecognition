<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/opt_bg">
    
    <Button 
        android:id="@+id/first_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="@string/first_login_text"
        />
    
     <Button 
        android:id="@+id/first_Register"
        android:layout_below="@id/first_Login"
        android:layout_alignLeft="@id/first_Login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/first_register_text"
        />
     
     <ImageView 
         android:id="@+id/first_personFace"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerInParent="true"
         />
     
      <TextView 
         android:id="@+id/first_result"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@id/first_personFace"
         android:layout_alignLeft="@id/first_personFace"
         android:text=""
         />
      
</RelativeLayout>
